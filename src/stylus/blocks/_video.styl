.Video
  padding 4rem
  flex 1

.video-box
  margin 0 auto
  width 80%
  background-color #ffffff
  padding 20% 2rem
  box-shadow  0 0 40px 0 rgba(#4A4A4A,.5)
  border-radius 2px
  z-index: 5
  position relative
  border 20px solid #fff
  margin-bottom 4rem
  & iframe
    position absolute
    top 0
    left 0
    width 100%
    height 100%


@media (max-width: 768px)
  .video-box
    width 100%
    padding: 30% 2rem
    border 10px solid #fff
